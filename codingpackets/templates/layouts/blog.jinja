{% extends "layouts/site.jinja" %}

{% block page_header %}
  {% if post %}
    {{ page_header(heading=post.title, published_date=post.published_date, updated_date=post.updated_date) }}
  {% else %}
    {{ page_header(heading="Stuff and Things Blog") }}
  {% endif %}
{% endblock page_header %}

{% block page_content %}
  <div class="">
    {% for post in posts %}
      <div class="py-2">
        <div class="block p-4 rounded-lg shadow-lg bg-white border-2">
          <div class="pb-2">
            <a class="text-sky-600 font-semibold text-2xl no-underline hover:text-sky-800" href="/blog/{{ post.title | parameterize }}">{{ post.title | title_case }}</a>
            <p class="text-gray-800 font-medium text-xl">
              {{ post.description }}
            </p>
          </div>

          {% include "includes/dates.jinja" %}

          <div class="">
            {{ tags(tags=post.tags) }}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock page_content %}

{% block page_tags %}
  {% if post %}
    {{ tags(tags=post.tags) }}
  {% endif %}
{% endblock page_tags %}

