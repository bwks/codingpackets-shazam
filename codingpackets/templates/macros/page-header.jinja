{% macro page_header(heading, published_date="", updated_date="") %}
<div class="pt-5 text-center">
  <h1 class="text-5xl text-zinc-900 font-black pb-3">{{ heading | title_case }}</h1>
  <div class="">
    {% if updated_date %}
      <p class="text-gray-400 text-lg italic">
        updated: {{ updated_date | human_date }}
      </p>
    {% endif %}
    {% if published_date %}
      <p class="text-gray-400 text-lg italic">
        published: {{ published_date | human_date }}
      </p>
    {% endif %}
  </div>
</div>
{% endmacro %}
{% set alias = page_header %}
