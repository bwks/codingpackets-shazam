{% macro tags(tags) %}
{% if tags %}
  <div class="py-3">
    {% for tag in tags %}
      <div class="inline-block pr-1.5">
        <div class="px-2.5 py-1 bg-rose-100 text-rose-700 dark:bg-rose-900 dark:text-rose-100 text-base font-semibold italic leading-tight lowercase rounded shadow-md">{{ tag }}</div>
      </div>
    {% endfor %}
  </div>
{% endif %}
{% endmacro %}
{% set alias = tags %}
