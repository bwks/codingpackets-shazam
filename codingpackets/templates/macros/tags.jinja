{% macro tags(tags) %}
{% if tags %}
  <div class="py-3">
    {% for tag in tags %}
      <div class="inline-block px-2.5 py-1 bg-rose-100 text-rose-700 text-base italic leading-tight lowercase rounded shadow-md">{{ tag }}</div>
    {% endfor %}
  </div>
{% endif %}
{% endmacro %}
{% set alias = tags %}
