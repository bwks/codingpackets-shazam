{% macro default(header, rows) %}
<div class="pt-2 pb-4 text-xl">
  <div class="rounded-md shadow-md shadow-zinc-400 dark:shadow-none overflow-auto">
    <table class="border-4 border-zinc-900 table-auto w-full">
      <thead class="text-center">
        <tr class="bg-zinc-900 text-neutral-100 dark:text-neutral-400">
        {% for column in header %}
          <th class="pt-1 pb-2 px-2">{{ column }}</th>
        {% endfor %}
        </tr>
      </thead>
      {% for row in rows %}
        {% set columns = row | split(pat="|") %}
        {% if loop.last %}
          <tr class="">
        {% else %}
          <tr class="border-b-2 border-zinc-900">
        {% endif %}
          {% for column in columns %}
            {% if loop.first %}
              <td class="px-2 pt-1 pb-2 border-r-2 border-zinc-900">{{ column }}</td>
            {% elif loop.last %}
              <td class="px-2 pt-1 pb-2 border-l-2 border-zinc-900">{{ column }}</td>
            {% else %}
              <td class="px-2 pt-1 pb-2 border-l-2 border-r-2 border-zinc-900">{{ column }}</td>
            {% endif %}
          {% endfor %}
        </tr>
      {% endfor %}
    </table>
  </div>
</div>
{% endmacro %}


{% macro toc(header, rows, slug=false) %}
<div class="collapse md:visible sticky top-20 overflow-y-auto">
  <div class="">
    <i class="not-italic font-semibold text-xl dark:text-neutral-400">{{ header }}</i>
  </div>
  {% for row in rows %}
    {% if row != "none" %}
      <div class="px-2">
        <a class="text-sky-600 font-normal text-xl no-underline hover:text-sky-800" href="#{{ row | slugify }}">
          {% if slug %}{{ row | slugify }}{% else %}{{ row }}{% endif %}
        </a>
      </div>
    {% endif %}
  {% endfor %}
</div>
{% endmacro %}

