{% macro code_block(header, language, code) %}
<div class="py-2">
  <div class="rounded-t-md bg-white border-2 border-b-0 border-zinc-800 py-1 text-center font-bold">
    <span class="">{{ header }}</span>
  </div>
  <div class="rounded-b-md bg-white border-2 border-t-0 border-zinc-800 font-mono">
    <pre><code class="language-{{ language }} hljs">{{ code | safe }}</code></pre>
  </div>
</div>
{% endmacro %}
{% set alias = code_block %}