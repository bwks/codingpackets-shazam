{% macro boxed_image(path, width="", height="") %}
<div class="pt-4 pb-6 flex justify-center">
  <img class="bg-white rounded-xl shadow-md shadow-zinc-400 dark:opacity-80 dark:shadow-none" 
    {% if width %}width="{{ width }}"{% endif %} {% if height %}height="{{ height }}"{% endif %}
    src="/img/{{ path }}" alt="{{ path }}">
</div>
{% endmacro %}
{% set alias = boxed_image %}