{% extends "_layouts/blog.jinja" %}

{% block page_content %}

  <h3 id="overview">Overview</h3>
  <p>
    3 steps to configure Syslog.
  </p>

  <ul>
    <li>Define a logging policy</li>
    <li>Define remote logging servers</li>
    <li>Define a logging source address (optional)</li>
  </ul>

  <h3 id="configuration">Configuration</h3>
  <p>
    Log to a local file. Logs are stored in the
    {{ text::emphasize(text="/var/log") }}
 directory.
  </p>
  <p>
    Define a logging policy.
  </p>
  {{ text::code_block(
  header="cmd",
  language="text",
  code=`set system syslog user * any emergency
set system syslog file messages any notice
set system syslog file messages authorization info
set system syslog file interactive-commands interactive-commands any`
) }}


  <p>
    Define remote logging servers.
  </p>
  {{ text::code_block(
  header="cmd",
  language="text",
  code=`set system syslog host syslog-server-1.domain any info
set system syslog host syslog-server-2.domain any info`
) }}


  <p>
    Define a logging source address.
  </p>
  {{ text::code_block(
  header="cmd",
  language="text",
  code=`set system syslog source-address 10.255.1.1`
) }}


  <h3 id="verification">Verification</h3>

  <p>
    Show log file.
  </p>
  {{ text::code_block(
  header="cmd",
  language="text",
  code=`show log messages
show log interactive-commands`
) }}


  <p>
    Start tailing a log file.
  </p>
  {{ text::code_block(
  header="cmd",
  language="text",
  code=`monitor start interactive-commands`
) }}


  <p>
    Stop tailing a log file.
  </p>
  {{ text::code_block(
  header="cmd",
  language="text",
  code=`monitor stop`
) }}


{% endblock page_content %}