{% extends "_layouts/site.jinja" %}

{% block page_header %}
  {% if post %}
    {{ text::header(heading=post.title, published_date="", updated_date="") }}
  {% endif %}
{% endblock page_header %}

{% block page_content %}
  {% for post in posts.draft | sort(attribute="title") %}
    <div class="font-medium text-xl">
      <a class="text-sky-600 text-2xl no-underline hover:text-sky-800" href="/blog/{{ post.title | slugify }}">{{ post.title | title }}</a>
    </div>
  {% endfor %}
{% endblock page_content %}

{% block page_tags %}
  {% if post %}
    {{ text::tag_block(tags=post.tags) }}
  {% endif %}
{% endblock page_tags %}

{% block page_toc %}
{% endblock page_toc %}