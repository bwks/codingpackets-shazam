{% extends "_layouts/site.jinja" %}

{% block page_header %}
  {% if post %}
    {{ text::header(heading=post.title, published_date="", updated_date="") }}
  {% endif %}
{% endblock page_header %}

{% block page_content %}
  {% for post in posts.draft | sort(attribute="title") %}
    {% if not post.category == "uncategorised" %}
      {% set title_slug = post.title | slugify %}
      {% set blog_path = blog_path ~ title_slug %}
    <div class="font-medium text-xl">
      {{ link::i(path=blog_path, description=post.title, text="text-2xl", color="gray", color_weight="600", dark_color="gray", dark_color_weight="400") }}
    </div>
    {% endif %}
  {% endfor %}
{% endblock page_content %}

{% block page_tags %}
  {% if post %}
    {{ text::tag_block(tags=post.tags) }}
  {% endif %}
{% endblock page_tags %}

{% block page_toc %}
{% endblock page_toc %}