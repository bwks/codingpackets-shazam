{% macro i(path, description="", text="", weight="", color="rose") %}<a class="{{ text }} {{ weight }} break-words text-{{ color }}-600 no-underline hover:decoration-2 hover:underline hover:underline-offset-4" href="{{ path }}">{% if description %}{{ description }}{% else %}{{ path }}{% endif %}</a>{% endmacro %}

{% macro e(path, description="", text="", weight="", color="rose") %}<a class="{{ text }} {{ weight }} break-words text-{{ color }}-600 no-underline hover:decoration-2 hover:underline hover:underline-offset-4" href="{{ path }}" target=_blank>{% if description %}{{ description }}{% else %}{{ path }}{% endif %}</a>{% endmacro %}

{% macro ref(path) %}<a class="text-rose-600 no-underline hover:decoration-2 hover:underline hover:underline-offset-4" href="#references-{{ path }}"><sup>[{{ path }}]</sup></a>{% endmacro %}
