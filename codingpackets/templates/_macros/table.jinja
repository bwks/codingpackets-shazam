{% macro default(header, rows) %}
<!-- TABLE DEFAULT START -->
<div id="table-default" class="pt-2 pb-4 text-xl">
  <div class="rounded-md shadow-md shadow-zinc-400 dark:shadow-none overflow-auto">
    <table class="border-4 border-zinc-900 table-auto w-full">
      <thead class="text-center">
        <tr class="bg-zinc-900 text-neutral-100 dark:text-neutral-400">
        {% for column in header %}
          <th class="pt-1 pb-2 px-2">{{ column }}</th>
        {% endfor %}
        </tr>
      </thead>
      {% for row in rows %}
        {% set columns = row | split(pat="|") %}
        {% if loop.last %}
          <tr class="">
        {% else %}
          <tr class="border-b-2 border-zinc-900">
        {% endif %}
          {% for column in columns %}
            {% if loop.first %}
              <td class="px-2 pt-1 pb-2 border-r-2 border-zinc-900">{{ column }}</td>
            {% elif loop.last %}
              <td class="px-2 pt-1 pb-2 border-l-2 border-zinc-900">{{ column }}</td>
            {% else %}
              <td class="px-2 pt-1 pb-2 border-l-2 border-r-2 border-zinc-900">{{ column }}</td>
            {% endif %}
          {% endfor %}
        </tr>
      {% endfor %}
    </table>
  </div>
</div>
<!-- TABLE DEFAULT END -->
{% endmacro %}


{% macro toc(header, rows, slug=false) %}
<!-- TABLE OF CONTENTS START -->
<div id="table-of-contents" class="invisible md:visible sticky top-20 overflow-y-scroll">
  <div class="">
    <i class="not-italic font-semibold text-xl dark:text-neutral-600">{{ header }}</i>
  </div>
  <div class="">
    {% for row in rows %}
      {% if row != "uncategorised" %}
        <div class="px-2">
          <a class="text-sky-600 font-normal text-xl no-underline hover:text-sky-800" href="#{{ row | slugify }}">
            {% if slug %}{{ row | slugify }}{% else %}{{ row }}{% endif %}
          </a>
        </div>
      {% endif %}
    {% endfor %}  
  </div>
</div>
<!-- TABLE OF CONTENTS END -->
{% endmacro %}


{% macro references(references) %}
<!-- TABLE REFERENCES START -->
<div id="references" class="pb-2">
  <div class="">
    <h3>References</h3>
  </div>
  <div class="">
    {% for reference in references %}
      <span id="references-{{ loop.index }}" class="pr-2">{{ loop.index }}</span> <span>{{ reference }}</span>
    {% endfor %}
  </div>
</div>
<!-- TABLE REFERENCES END -->
{% endmacro %}
